@{
  Layout = "_Layout";
}
@model Factory.Models.Machine

<div class="home">

  <div class="card border-secondary mb-3 mt-5" style="max-width: 60rem;">
    <div class="card-header">
      <h1>Add a Machine</h1>
    </div>
    <div class="card-body">
      <h4 class="card-title"></h4>
      <p class="card-text">
        @using (Html.BeginForm())
        {
          @Html.LabelFor(model => model.Name)
          @Html.TextBoxFor(model => model.Name)
          <br>
          @Html.LabelFor(model => model.IsOperational)
          @Html.DropDownList("Operation", new List<SelectListItem>
        {
        new SelectListItem { Text = "Functioning", Value = "Functioning"},
        new SelectListItem { Text = "Broken ", Value = "Broken"},
        new SelectListItem {Text = "Servicing", Value ="Servicing"}
        }, "Select Operationality")
          <br>

          @Html.LabelFor(model => model.DateOfInspection)
          @Html.TextBoxFor(model => model.DateOfInspection)

          <br>
          <button><input type="submit" value="Add new machine" /></button>
        }
        <br>
        <button> @Html.ActionLink("Show all machines", "Index") </button>
        <br>
      </p>
    </div>
  </div>
</div>
